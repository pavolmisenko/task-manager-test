{
  "name": "task-manager",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:ts": "tsc",
    "build:js": "esbuild --format=esm --bundle --loader:.css=copy --outfile=lib/bundle.js src/custom-web-components/main.ts",
    "build:css": "postcss -r \"./lib/*.js\"",
    "build:static": "cp lib/* src/web/static/js/"
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "daisyui": "^4.12.13",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  }
}
